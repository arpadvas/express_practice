extends layout.jade
block content
    .container.mt-2.text-xs-center
      h1.display-4 Current weather
      p 24 hours weather forecast in #{locals.name}
      .row
        .col-md-6.offset-md-3
          p
            button.btn.btn-secondary.w-100.text-xs-left(type='button', data-toggle='collapse', data-target='#collapseExample1', aria-expanded='false', aria-controls='collapseExample')
              span.float-xs-right #{locals.main.temp} °C
              |               12/19/2016 9h Light rain
          #collapseExample1.collapse
            .card.card-block.p-0
              ul.list-group.text-muted.text-xs-left
                li.list-group-item
                  span.float-xs-right 14
                  |                   Min Temp
                li.list-group-item
                  span.float-xs-right 14
                  |                   Max Temp
                li.list-group-item
                  span.float-xs-right 2
                  |                   Humidity
                li.list-group-item
                  span.float-xs-right 1
                  |                   Wind speed
                li.list-group-item
                  span.float-xs-right 1
                  |                   Cloudiness
          p
            button.btn.btn-secondary.w-100.text-xs-left(type='button', data-toggle='collapse', data-target='#collapseExample2', aria-expanded='false', aria-controls='collapseExample')
              span.float-xs-right 14 °C
              |               12/19/2016 12h Sunshine
          #collapseExample2.collapse
            .card.card-block.p-0
              ul.list-group.text-muted.text-xs-left
                li.list-group-item
                  span.float-xs-right 14
                  |                   Min Temp
                li.list-group-item
                  span.float-xs-right 14
                  |                   Max Temp
                li.list-group-item
                  span.float-xs-right 2
                  |                   Humidity
                li.list-group-item
                  span.float-xs-right 1
                  |                   Wind speed
                li.list-group-item
                  span.float-xs-right 1
                  |                   Cloudiness
          a.btn.btn-primary.mt-2(href='/', role='button') New search
